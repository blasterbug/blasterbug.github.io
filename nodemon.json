{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src"
  ],
  "verbose": true,
  "exec": "webpack serve --mode development",
  "watch": [
    ".env",
    "index.html",
    "babel.config.json",
    "postcss.config.js",
    "tailwind.config.js",
    "tsconfig.json",
    "webpack.config.js"
  ],
  "env": {
    "NODE_ENV": "development",
    "BABEL_ENV": "development"
  },
  "ext": "js,jsx,json,ts,tsx"
}
